<idea-plugin>
    <id>ros-integrate</id>
    <name>ROS Support</name>
    <vendor email="TheNODO55@gmail.com">Noam Dori</vendor>
    <idea-version since-build="182.3684"/>

    <description>
        A plugin for IntelliJ based IDEs with the purpose of allowing easy use of the ROS framework.
    </description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- this should be changed to CLion when done -->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <spellchecker.bundledDictionaryProvider implementation="ros.integrate.ROSBundledDictionaryProvider"/>

        <!-- ROS packet files -->
        <fileTypeFactory implementation="ros.integrate.pkt.file.ROSMsgFileTypeFactory"/>
        <fileTypeFactory implementation="ros.integrate.pkt.file.ROSSrvFileTypeFactory"/>

        <!-- ROS packet Language -->
        <lang.parserDefinition language="ROSPkt" implementationClass="ros.integrate.pkt.ROSPktParserDefinition"/>
        <lang.syntaxHighlighterFactory language="ROSPkt" implementationClass="ros.integrate.pkt.ROSMsgSyntaxHighlighterFactory"/>
        <lang.commenter language="ROSPkt" implementationClass="ros.integrate.pkt.ROSMsgCommenter"/>
        <lang.refactoringSupport language="ROSPkt" implementationClass="ros.integrate.pkt.ROSMsgRefactoringSupportProvider"/>
        <lang.braceMatcher language="ROSPkt" implementationClass="ros.integrate.pkt.ROSMsgBraceMatcher"/>
        <lang.elementManipulator forClass="ros.integrate.pkt.psi.ROSPktType"
                                 implementationClass="ros.integrate.pkt.ROSMsgTypeElementManipulator"/>
        <colorSettingsPage implementation="ros.integrate.pkt.ROSMsgColorSettings"/>
        <completion.contributor language="ROSPkt" implementationClass="ros.integrate.pkt.ROSMsgCompletionContributor"/>
        <annotator language="ROSPkt" implementationClass="ros.integrate.pkt.annotate.ROSMsgAnnotator"/>
        <gotoSymbolContributor implementation="ros.integrate.pkt.ROSMsgChooseByNameContributor"/>
        <nameSuggestionProvider implementation="ros.integrate.pkt.ROSMsgNameSuggestionProvider" />
        <psi.referenceContributor language="ROSPkt" implementation="ros.integrate.pkt.ROSMsgTypeReferenceContributor"/>
        <spellchecker.support language="ROSPkt" implementationClass="ros.integrate.pkt.ROSMsgSpellcheckingStrategy"/>

        <localInspection language="ROSPkt" implementationClass="ros.integrate.pkt.inspection.CamelCaseInspection"
                         level="WARNING" enabledByDefault="true" shortName="type-not-camelcase"
                         groupName="ROS" displayName="Type not in CamelCase"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>