<idea-plugin>
    <id>ros-integrate</id>
    <name>ROS Support</name>
    <vendor email="TheNODO55@gmail.com">Noam Dori</vendor>
    <idea-version since-build="182.3684"/>

    <description>
        A plugin for IntelliJ based IDEs with the purpose of allowing easy use of the ROS framework.
    </description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- this should be changed to CLion when done -->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <spellchecker.bundledDictionaryProvider implementation="ros.integrate.ROSBundledDictionaryProvider"/>

        <!-- ROS .msg Language -->
        <lang.parserDefinition language="ROSMsg" implementationClass="ros.integrate.msg.ROSMsgParserDefinition"/>
        <lang.syntaxHighlighterFactory language="ROSMsg" implementationClass="ros.integrate.msg.ROSMsgSyntaxHighlighterFactory"/>
        <lang.commenter language="ROSMsg" implementationClass="ros.integrate.msg.ROSMsgCommenter"/>
        <lang.refactoringSupport language="ROSMsg" implementationClass="ros.integrate.msg.ROSMsgRefactoringSupportProvider"/>
        <lang.braceMatcher language="ROSMsg" implementationClass="ros.integrate.msg.ROSMsgBraceMatcher"/>
        <lang.elementManipulator forClass="ros.integrate.msg.psi.ROSMsgType"
                                 implementationClass="ros.integrate.msg.ROSMsgTypeElementManipulator"/>
        <fileTypeFactory implementation="ros.integrate.msg.ROSMsgFileTypeFactory"/>
        <colorSettingsPage implementation="ros.integrate.msg.ROSMsgColorSettings"/>
        <completion.contributor language="ROSMsg" implementationClass="ros.integrate.msg.ROSMsgCompletionContributor"/>
        <annotator language="ROSMsg" implementationClass="ros.integrate.msg.annotate.ROSMsgAnnotator"/>
        <gotoSymbolContributor implementation="ros.integrate.msg.ROSMsgChooseByNameContributor"/>
        <nameSuggestionProvider implementation="ros.integrate.msg.ROSMsgNameSuggestionProvider" />
        <psi.referenceContributor language="ROSMsg" implementation="ros.integrate.msg.ROSMsgTypeReferenceContributor"/>
        <spellchecker.support language="ROSMsg" implementationClass="ros.integrate.msg.ROSMsgSpellcheckingStrategy"/>

        <localInspection language="ROSMsg" implementationClass="ros.integrate.msg.inspection.CamelCaseInspection"
                         level="WARNING" enabledByDefault="true" shortName="type-not-camelcase"
                         groupName="ROS" displayName="Type not in CamelCase"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>